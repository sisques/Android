<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="7dp">

    <ImageView
        android:id="@+id/ProductoResumenImagen"
        android:layout_width="163dp"
        android:layout_height="156dp"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        app:srcCompat="@drawable/logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="7dp">


        <TextView
            android:id="@+id/ProductoResumenTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Ejemplo"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ProductoResumenPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_euro"
            android:text="@string/Ejemplo"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ProductoResumenCiudad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_location"
            android:text="@string/Ejemplo" />

        <TextView
            android:id="@+id/ProductoResumenDescripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="@string/Ejemplo"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>